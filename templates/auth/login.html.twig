{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="notificationBox-error">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="loginForm-container">
    <form action="{{ path('security_login') }}" method="post">
        <div>
            <div class="form-group">
                <label for="username">Vartotojo Vardas</label>
                <input type="text" id="username" name="_username" 
                    required="required" class="validate" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="username">Slaptažodis</label>
                <input type="password" id="password" name="_password" 
                    required="required" class="validate">
            </div>
            <div class="form-group">
                <button type="submit" id="Login" name="Login" 
                    class="btn-secondary btn">Prisijungti</button>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
        </div>
    </form>
    </div>
     <div class="notificationBox">
        Nesate užsiregistravę? <a href="{{ path('user_register')}}">Registruokitės!</a>
    </div>
{% endblock %}